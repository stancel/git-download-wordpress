DB_NAME={{ git_download_wordpress_db_name }}
DB_USER={{ git_download_wordpress_db_user }}
DB_PASSWORD={{ git_download_wordpress_db_password }}

# Optional variables
DB_HOST={{ git_download_wordpress_db_host }}
DB_PREFIX=wp_

# Set to environment (development, staging, production)
{% if git_download_wordpress_environment_type == "dev" %}
WP_ENV=development
{% endif %}
{% if git_download_wordpress_environment_type == "qa" %}
WP_ENV=staging
{% endif %}
{% if git_download_wordpress_environment_type == "prod" %}
WP_ENV=production
{% endif %}

WP_HOME={{ git_download_wordpress_wp_home }}
WP_SITEURL=${WP_HOME}/wp

# Change these obviously. Will do it programmatically later, but for now just putting some values.
# See this - https://github.com/aaemnnosttv/wp-cli-dotenv-command#salts
# Generate your keys here: https://roots.io/salts.html
